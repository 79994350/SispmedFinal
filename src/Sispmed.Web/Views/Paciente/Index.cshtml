@model IEnumerable<Sispmed.Core.Domain.Pacientes>

@{
    ViewData["Title"] = "Pacientes";
    Layout = "~/Views/Shared/_DashBoard.cshtml";
}

<p>
    <a asp-action="Create">Agregar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre
            </th>
            <th>
                Apellido
            </th>
            <th>
                Telefono
            </th>
            <th>
                Eps
            </th>

            <th>
                Email
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PNom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PApe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelPac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eps.NomEps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MailPac)
            </td>
            <td>
                <a class="editar" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a class="eliminar" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
